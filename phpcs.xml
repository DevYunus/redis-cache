<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Redis-Object-Cache" namespace="WordPressCS\WordPress" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
	<description>Redis Object Cache coding standards</description>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<!-- Target PHP version -->
	<config name="testVersion" value="5.4-"/>
    <rule ref="PHPCompatibilityWP">
		<!-- Only inspect php files for incompatibilities -->
		<include-pattern>*\.php$</include-pattern>
	</rule>
    <rule ref="WordPress">
		<!-- We love short syntax -->
		<exclude name="WordPress.PHP.DisallowShortTernary"/>
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
	</rule>
</ruleset>